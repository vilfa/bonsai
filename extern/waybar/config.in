{
    "layer": "top",
    "modules-left": [
        "sway/workspaces",
        "sway/mode"
    ],
    "modules-center": [
        "sway/window",
        "idle_inhibitor"
    ],
    "modules-right": [
        "tray",
        "sway/language",
        "network",
        "cpu",
        "memory",
        "pulseaudio",
        "battery",
        "backlight",
        "clock"
    ],
    "sway/window": {
        "max-length": 50
    },
    "sway/workspaces": {
        "format": "{name} {icon}",
        "on-click": "activate",
        "all-outputs": false,
        "active-only": false,
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": []
        }
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "sway/language": {
        "format": "{short} ",
        "show-passive-items": true,
        "on-click": "gnome-control-center keyboard",
        "tooltip": false,
        "tooltip-format": ""
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "{essid} ({signalStrength}%) | {ipaddr}/{cidr} ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "format-disconnected": "",
        "tooltip-format": "int {ifname} via {gwaddr}",
        "tooltip-format-wifi": "int {ifname} via {gwaddr}",
        "tooltip-format-ethernet": "int {ifname} via {gwaddr}",
        "tooltip-format-disconnected": "",
        "on-click": "gnome-control-center wifi"
    },
    "cpu": {
        "interval": 10,
        "format": "{usage}% "
    },
    "memory": {
        "interval": 30,
        "format": "{used:0.1f}GiB ﬙",
        "tooltip-format": "{used:0.2f}GiB/{total:0.2f}GiB"
    },
    "pulseaudio": {
        "format": "{volume}% {icon} | {format_source}",
        "format-muted": "0% {icon} | {format_source}",
        "format-bluetooth": "{volume}%  | {format_source}",
        "format-bluetooth-muted": "0%  | {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "0% ",
        "format-icons": {
            "headphone": "",
            "speaker": [
                "",
                "",
                ""
            ],
            "default": [
                "",
                "",
                ""
            ]
        },
        "scroll-step": 2,
        "on-click": "gnome-control-center sound"
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "on-click": "gnome-control-center power",
        "tooltip": false,
        "tooltip-format": ""
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": [
            "",
            "",
            ""
        ],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "on-click": "gnome-control-center power",
        "tooltip": false,
        "tooltip-format": ""
    },
    "clock": {
        "format": "{:%d-%m-%Y %H:%M}",
        "format-alt": "{:%a, %b %d %Y %H:%M}",
        "tooltip-format": "",
        "on-click": "gnome-calendar"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "tooltip": false,
        "tooltip-format": ""
    }
}
